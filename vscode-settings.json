{
  // Aesthetic
  "workbench.colorTheme": "Tokyo Night Storm",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12.5,
  "workbench.startupEditor": "none",
  "workbench.fontAliasing": "antialiased",
  "workbench.sideBar.location": "right",
  "debug.toolBarLocation": "docked",
  "workbench.editor.showTabs": "none",
  "editor.lineNumbers": "relative",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.vertical": "hidden",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "workbench.activityBar.location": "top",
  // General
  "errorLens.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "telemetry.telemetryLevel": "off",
  "files.autoSave": "onFocusChange",
  "explorer.confirmDragAndDrop": false,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "window.closeWhenEmpty": true,
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.editor.restoreViewState": false,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.inlineSuggestion": "alwaysOnTop",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.organizeImports.ruff": "always",
    "source.fixAll": "always",
    "source.unusedImports": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.svg": "default"
  },
  // Extensions
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "extensions.autoCheckUpdates": true,
  // Cursor
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.general.disableHttp2": true,
  "cursor.general.enableShadowWorkspace": false,
  "cursor.aipreview.enabled": true,
  "cursor.chat.smoothStreaming": true,
  "workbench.activityBar.orientation": "vertical", // to make quick window navigation works
  // Copilot
  "github.copilot.enable": {
    "*": true,
    "markdown": true
  },
  "chat.agent.enabled": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "http.proxy": "http://127.0.0.1:9000",
  "github.copilot.chat.generateTests.codeLens": true,
  "chat.agent.maxRequests": 100,
  // Pyton
  "ruff.nativeServer": "on",
  "python.languageServer": "Pylance",
  "ruff.format.preview": true,
  "ruff.lint.enable": true,
  "python.analysis.typeCheckingMode": "basic",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": "off"
  },
  // Web
  "tailwind-fold.autoFold": false,
  "files.associations": {
    "*.page-template": "vue",
    "*.layout-template": "vue",
    "*.vue": "vue",
    "*.css": "tailwindcss"
  },
  // Bash
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  // Yaml
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // Typst
  "[typst]": {
    "editor.defaultFormatter": null
  },
  "tinymist.exportPdf": "onSave",
  "tinymist.formatterMode": "typstfmt",
  // Vim
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(234, 153, 156, 0.5)",
  "vim.highlightedyank.duration": 200,
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.easymotionMarkerBackgroundColor": "white",
  "vim.easymotionMarkerForegroundColorOneChar": "#BF616A",
  "vim.easymotionMarkerFontWeight": "bold",
  "vim.foldfix": true, // disable unfold when hover
  "vim.sneak": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vspacecode.bindingOverrides": [
    {
      "keys": "f.n",
      "name": "Advanced new file",
      "type": "command",
      "command": "extension.advancedNewFile"
    },

    {
      "keys": "l",
      "name": "Execute selection in REPL",
      "type": "command",
      "command": "editor.debug.action.selectionToRepl"
    },
    {
      "keys": "d.l",
      "name": "Execute selection in REPL",
      "type": "command",
      "command": "editor.debug.action.selectionToRepl"
    },
    {
      "keys": "d.r",
      "name": "Select and start debugging",
      "type": "command",
      "command": "workbench.action.debug.selectandstart"
    },
    {
      "keys": "c.e",
      "name": "Toggle errorLens",
      "type": "command",
      "command": "errorLens.toggle"
    },
    {
      "keys": "t.n",
      "name": "New terminal",
      "type": "command",
      "command": "workbench.action.terminal.new"
    },
    {
      "keys": "t.d",
      "name": "Close terminal",
      "type": "command",
      "command": "workbench.action.terminal.kill"
    },
    {
      "keys": "t.f",
      "name": "Toggle terminal fullscreen",
      "type": "command",
      "command": "workbench.action.toggleMaximizedPanel"
    },
    {
      "keys": "c",
      "name": "Co-Pilot",
      "type": "bindings",
      "icon": "robot",
      "bindings": [
        {
          "key": "c",
          "name": "Toggle secondary sidebar visibility",
          "command": "workbench.action.toggleAuxiliaryBar"
        },
        {
          "key": "s",
          "name": "Copilot Status",
          "command": "github.copilot.toggleStatusMenu"
        },
        {
          "key": "g",
          "name": "Generate terminal commit message",
          "command": "github.copilot.terminal.generateCommitMessage"
        },
        {
          "key": "t",
          "name": "Fix terminal last command",
          "command": "github.copilot.terminal.fixTerminalLastCommand"
        }
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    // Center screen when using <C-d> and <C-u>
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["z", "m"],
      "commands": ["editor.foldAll"]
    },
    {
      "before": ["z", "r"],
      "commands": ["editor.unfoldAll"]
    },
    {
      "before": ["z", "a"],
      "commands": ["editor.toggleFold"]
    },
    // Remap easymotion n-character search to s
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "/"]
    },
    // Remap JumpAnywhere search to S
    {
      "before": ["S"],
      "after": ["<leader>", "<leader>", "<leader>", "j"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    // Remap easymotion n-character search to s
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "/"]
    },
    // Remap JumpAnywhere search to S
    {
      "before": ["S"],
      "after": ["<leader>", "<leader>", "<leader>", "j"]
    }
  ]
}
